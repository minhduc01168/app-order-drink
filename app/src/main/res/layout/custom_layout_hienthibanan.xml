<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size10dp"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imBanAn"
        android:layout_width="118dp"
        android:layout_height="97dp"
        android:layout_below="@+id/txtTenBanAn"
        android:src="@drawable/banan"
        android:layout_marginLeft="4dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imGoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goimon"
        android:layout_below="@+id/imBanAn"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thanhtoan"
        android:layout_below="@+id/imBanAn"
        android:layout_toEndOf="@+id/imGoiMon"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anbutton"
        android:layout_below="@+id/imBanAn"
        android:layout_toEndOf="@+id/imThanhToan"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />
</RelativeLayout>