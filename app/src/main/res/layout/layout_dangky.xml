<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/design_default_color_primary">

    <TextView
        android:id="@+id/txtTieuDeDangKy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/dangky"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edTenDangNhapDK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:background="@color/colorWhite"
        android:hint="@string/tendangnhap"
        android:textColorHint="@color/colorGray"
        android:padding="@dimen/size10dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:ems="15"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        tools:ignore="Autofill,TextFields"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/edFullName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:background="@color/colorWhite"
        android:hint="@string/hovaten"
        android:textColorHint="@color/colorGray"
        android:padding="@dimen/size10dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:ems="15"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        tools:ignore="Autofill,TextFields"
        android:textColor="@color/colorBlack"/>


    <EditText
        android:id="@+id/edMatKhauDK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:background="@color/colorWhite"
        android:hint="@string/nhapmatkhau"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorBlack"
        android:drawableLeft="@drawable/password"
        android:ems="15"
        android:padding="@dimen/size10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="@dimen/size10dp"
        android:password="true"
        tools:ignore="Autofill,Deprecated,TextFields" />

    <RadioGroup
        android:id="@+id/rgGioiTinhDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/rdNam"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:layout_marginEnd="@dimen/size10dp"
            android:textColor="@color/colorBlack"/>
        <RadioButton
            android:id="@+id/rdNu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ná»¯"
            android:textColor="@color/colorBlack"/>
    </RadioGroup>

    <Spinner
        android:id="@+id/spinQuyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edNgaySinhDK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:background="@color/colorWhite"
        android:hint="@string/ngaysinh"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/size10dp"
        android:inputType="date"
        android:editable="false"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="10dp"
        android:ems="15"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        tools:ignore="Autofill,Deprecated,TextFields" />

    <EditText
        android:id="@+id/edCMNDDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:hint="@string/cmnd"
        android:textColorHint="@color/colorGray"
        android:padding="@dimen/size10dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/idcard"
        android:drawablePadding="10dp"
        android:ems="15"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:inputType="numberDecimal"
        android:maxLength="9"
        tools:ignore="Autofill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/btnDongYDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dongy"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:padding="@dimen/size10dp"
            android:layout_margin="10dp"
            android:background="@color/greenButton"
            tools:ignore="ButtonStyle"/>

        <Button
            android:id="@+id/btnThoatDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thoat"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:padding="@dimen/size10dp"
            android:background="@color/orangeButton"
            android:textColor="@color/colorWhite"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</LinearLayout>
